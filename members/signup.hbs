{{!< ../default}}

<div class='o-wrapper'>
  {{#if @member}}
    {{!-- Logged in: Redirect home --}}
    <script>window.location = '{{@site.url}}';</script>
  {{else}}
  {{!-- Not logged in: Sign up --}}
    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--2-4-l'>
        <div class='c-archive'>
          <h1 class='c-archive__title'>{{t 'Subscribe to {siteTitle}' siteTitle=@site.title}}</h1>
          <p class='c-archive__description'>{{t 'Get access to premium content'}}</p>
        </div>
      </div>
    </div>

    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l'>
        <form data-members-form='signup' class='c-subscribe-form'>
          <div class='form-group'>
            <label for='subscribe-email-signup' class='u-hidden-visually'>{{t 'Your email address' }}</label>
            <input type='email' name='email' class='c-subscribe-form__input' id='subscribe-email-signup' placeholder='{{t 'Your email address' }}' data-members-email>
            <button type='submit' class='c-btn c-btn--action c-subscribe-form__btn'>{{t 'Continue' }}</button>
          </div>

          <div class='u-alert u-alert--success u-mt-16'>{{t 'Please check your inbox and click the link to confirm your subscription.' }}</div>
          <div class='u-alert u-alert--invalid u-mt-16'>{{t 'Please enter a valid email address!' }}</div>
          <div class='u-alert u-alert--error u-mt-16'>{{t 'An error occurred, please try again later.' }}</div>
        </form>
        <p class='u-type-xs u-mt-16'>{{t 'Already have an account?' }} <a href='/signin/' class='u-link'>{{t 'Log in' }}</a></p>
      </div>
    </div>
  {{/if}}
</div>
